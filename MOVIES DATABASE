-- WHICH MOVIES ARE THE ACTORS IN?

SELECT ACTOR.NAME, MOVIES.TITLE
FROM MOVIES
JOIN ACTOR ON MOVIES.ID= ACTOR.ID
ORDER BY MOVIES.ID; 

-- WHAT IS THE GENRE OF THE ACTORS?

SELECT ACTOR.NAME, MOVIES.GENRE
FROM MOVIES 
JOIN ACTOR ON MOVIES.ID= ACTOR.ID LIMIT 5;

-- WHAT YEAR DID THE ACTORS STAR IN THE MOVIES?

SELECT ACTOR.NAME, MOVIES.TITLE, MOVIES.year_released
FROM MOVIES
JOIN ACTOR ON MOVIES.ID=ACTOR.ID
ORDER BY year_released;
